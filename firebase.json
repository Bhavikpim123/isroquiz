{
  \"firestore\": {
    \"rules\": \"firestore.rules\",
    \"indexes\": \"firestore.indexes.json\"
  },
  \"hosting\": {
    \"target\": \"isro-quiz-app\",
    \"public\": \"build/web\",
    \"ignore\": [
      \"firebase.json\",
      \"**/.*\",
      \"**/node_modules/**\"
    ],
    \"rewrites\": [
      {
        \"source\": \"**\",
        \"destination\": \"/index.html\"
      }
    ]
  }
}